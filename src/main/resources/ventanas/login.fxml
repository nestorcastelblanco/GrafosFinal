<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/17.0.2-ea"
            fx:controller="co.edu.uniquindio.grafosFinal.controladores.LoginControlador">
    <children>
        <ImageView>
            <image>
                <Image url="@../imagenes/grafo.png"/>
            </image>
            <fitWidth>250.0</fitWidth>
            <fitHeight>250.0</fitHeight>
            <layoutX>30.0</layoutX>
            <layoutY>16.0</layoutY>
        </ImageView>
        <Button fx:id="infoButton" layoutX="0.0" layoutY="0.0" mnemonicParsing="false" prefHeight="30.0"
                prefWidth="30.0" onAction="#info">
            <graphic>
                <ImageView fitHeight="55.0" fitWidth="55.0">
                    <Image url="@../imagenes/signo.png"/>
                </ImageView>
            </graphic>
            <style>
                -fx-background-color: black;
            </style>
        </Button>
        <Label layoutX="340.0" layoutY="164.0" text="Usuario" textFill="WHITE">
            <font>
                <Font name="Segoe UI Bold" size="16.0"/>
            </font>
        </Label>
        <Label layoutX="327.0" layoutY="214.0" text="Contraseña" textFill="WHITE">
            <font>
                <Font name="Segoe UI Bold" size="16.0"/>
            </font>
        </Label>
        <TextField fx:id="usernameField" layoutX="425.0" layoutY="160.0" prefHeight="26.0" prefWidth="150.0"
                   promptText="Nombre">
            <font>
                <Font name="Segoe UI" size="14.0"/>
            </font>
        </TextField>
        <PasswordField fx:id="passwordField" layoutX="425.0" layoutY="210.0" prefHeight="26.0" prefWidth="150.0"
                       promptText="Identificación">
            <font>
                <Font name="Segoe UI" size="14.0"/>
            </font>
        </PasswordField>
        <Button fx:id="loginButton" layoutX="397.0" layoutY="266.0" mnemonicParsing="false" onAction="#login"
                text="Entrar">
            <font>
                <Font name="Segoe UI Bold" size="13.0"/>
            </font>
        </Button>
        <Button fx:id="registerButton" layoutX="463.0" layoutY="266.0" mnemonicParsing="false" onAction="#register"
                text="Registrar">
            <font>
                <Font name="Segoe UI Bold" size="13.0"/>
            </font>
        </Button>
        <Label layoutX="39.0" layoutY="273.0" text="Teoría de Grafos" textFill="WHITE">
            <font>
                <Font name="Segoe UI Bold" size="30.0"/>
            </font>
        </Label>
        <Separator layoutX="297.0" orientation="VERTICAL" prefHeight="400.0" prefWidth="4.0"/>
        <Label layoutX="385.0" layoutY="92.0" text="Iniciar Sesión" textFill="WHITE">
            <font>
                <Font name="Segoe UI Bold" size="25.0"/>
            </font>
        </Label>
        <Label layoutX="106.0" layoutY="310.0" text="Aplicación" textFill="WHITE">
            <font>
                <Font name="Segoe UI Bold" size="20.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
